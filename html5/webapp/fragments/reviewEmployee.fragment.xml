<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
   
        <Panel headerText="1. {i18n>employeeType}">
            <f:SimpleForm editable="false" layout="ResponsiveGridLayout">
                <Label text="{i18n>type}" />
                <Text text="{employeeModel>/Type}" />
                <Button text="{i18n>edit}" press="goToStep1" type="Transparent" width="20%" />
            </f:SimpleForm>
        </Panel>
        <Panel headerText="2. {i18n>employeeInfo}" >
            <f:SimpleForm
                editable="false"
                layout="ResponsiveGridLayout" >
                <Label text="{i18n>Name}" />
                <Text text="{employeeModel>/FirstName}" />
                <Label text="{i18n>lastName}" />
                <Text text="{employeeModel>/LastName}" />
                <Label text="{i18n>DNI}" />
                <Text text="{employeeModel>/Dni}" />
                <Label text="{i18n>salary}" />
                <Text text="{employeeModel>/Salary}" />
                <Label text="{i18n>date}" />
                <Text text="{employeeModel>/Date}" />
                <Button text="{i18n>edit}" press="goToStep2" type="Transparent" width="20%" />
            </f:SimpleForm>
        </Panel>
        <Panel headerText="3. {i18n>additionalInfo}">
            <f:SimpleForm editable="false" layout="ResponsiveGridLayout">
                <Label text="{i18n>comments}" />
                <Text text="Desarrollador SAPUI5" />
                <Label text="{i18n>documents}" />
                <Text text="1 Archivo" />
                <Button text="{i18n>edit}" press="goToStep3" type="Transparent" width="20%" />
            </f:SimpleForm>
        </Panel>   
</core:FragmentDefinition>
