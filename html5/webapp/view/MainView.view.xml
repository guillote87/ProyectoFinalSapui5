<mvc:View xmlns:core="sap.ui.core" controllerName="gq4dev.html5.controller.MainView" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <Page id="page" title="{i18n>mainMenu}">
        <Panel id="empleadosPanel" headerText="{i18n>employees}"  expanded="true" expandable="true">
            <content>
                <GenericTile id="createEmployeeTile" class="sapUiSmallMarginEnd">
                    <TileContent footer="{i18n>createEmployee}">
                        <ImageContent src="sap-icon://add-employee" />
                    </TileContent>
                </GenericTile>
                <GenericTile id="searchEmployeeTile" class="sapUiSmallMarginEnd" >
                    <TileContent footer="{i18n>searchEmployee}">
                        <TileContent>
                            <ImageContent src="sap-icon://employee-lookup" />
                        </TileContent>
                    </TileContent>
                </GenericTile>
            </content>
        </Panel>
         <Panel id="ordersPanel" headerText="{i18n>orders}" expanded="true" expandable="true">
            <content>
                <GenericTile id="signOrder" class="sapUiSmallMarginEnd">
                    <TileContent footer="{i18n>signOrder}">
                        <ImageContent src="sap-icon://signature" />
                    </TileContent>
                </GenericTile>
            </content>
        </Panel>
    </Page>
</mvc:View>
